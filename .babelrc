{
  "presets": [
    ["env", { "useBuiltIns": true }],
    "stage-1",
    "react"
  ],
  "plugins": ["lodash"],
  "env": {
    "development": {
      "presets": ["react-hmre"],
      "plugins": [
        ["react-css-modules", {
          "filetypes": {
            ".scss": {
              "syntax": "postcss-scss",
              "plugins": [
                ["postcss-nested", { "preserveEmpty": true }]
              ]
            }
          },
          "generateScopedName": "[local]",
          "handleMissingStyleName": "warn"
        }]
      ]
    },
    "production": {
      "plugins": [
        ["react-css-modules", {
          "filetypes": {
            ".scss": {
              "syntax": "postcss-scss",
              "plugins": [
                ["postcss-nested", { "preserveEmpty": true }]
              ]
            }
          },
          "generateScopedName": "__[hash:6]",
          "handleMissingStyleName": "ignore"
        }]
      ]
    }
  }
}
