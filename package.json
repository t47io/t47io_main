{
  "name": "t47io_main",
  "version": "2.6.3",
  "description": "Personal website app of t47.io",
  "main": "server/server.js",
  "engines": {
    "node": ">=6.9.0 <8.0.0",
    "yarn": "^0.24.6"
  },
  "scripts": {
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "./node_modules/eslint/bin/eslint.js applications build server webpack.*.js --ext [.jsx,.js] --fix",
    "lint:css": "./node_modules/stylefmt/bin/cli.js -i applications/common/mixins/sprite.scss -r \"applications/**/*.{css,scss}\"",

    "json": "babel-node ./server/json.js",
    "stat": "yarn cron && yarn json && yarn build && yarn cron:chmod",
    "build": "yarn lint:js && yarn json && yarn build:server && yarn build:client",

    "nodemon": "./node_modules/nodemon/bin/nodemon.js -e js,jsx,json,css,scss,html -i public/ -i config/main.json -i config/project.json -x babel-node -d 3 -V server/server.js",
    "dev": "yarn json && yarn nodemon",
    "prod": "pm2 start --interpreter babel-node server/server.js -n main",

    "build:server": "yarn webpack:server && yarn process:server",
    "build:client": "yarn webpack:client && yarn process:error && yarn process:client && yarn process:manifest && yarn process:static",

    "webpack:server": "BABEL_ENV=production babel-node ./node_modules/webpack/bin/webpack.js --config webpack.config.server.js",
    "webpack:client": "BABEL_ENV=production babel-node ./node_modules/webpack/bin/webpack.js --config webpack.config.client.js --verbose",

    "process:server": "babel-node ./build/process/server.jsx",
    "process:client": "babel-node ./build/process/client.js",
    "process:error": "babel-node ./build/process/error.jsx",
    "process:manifest": "babel-node ./build/process/manifest.js",
    "process:copy": "babel-node ./build/process/copy.js",
    "process:sitemap": "babel-node ./build/process/sitemap.js",
    "process:clean": "babel-node ./build/process/clean.js",
    "process:static": "yarn process:copy && yarn process:sitemap && yarn process:clean",

    "cron": "yarn cron:contrib && yarn cron:repo && yarn cron:scholar && yarn cron:https && yarn cron:backup && yarn cron:email",
    "cron:contrib": "babel-node ./server/cron/git_contrib.js",
    "cron:repo": "babel-node ./server/cron/git_repo.js",
    "cron:scholar": "babel-node ./server/cron/cite_scholar.js",
    "cron:https": "babel-node ./server/cron/ssl_expire.js",
    "cron:backup": "babel-node ./server/cron/backup.js",
    "cron:email": "babel-node ./server/cron/email.js",
    "cron:chmod": "babel-node ./server/cron/chmod.js",
    "cron:renew": "babel-node ./server/cron/ssl_renew.js",

    "update": "./node_modules/npm-check-updates/bin/ncu -x preact -u -a && yarn upgrade && yarn clean"
  },
  "repository": "github:t47io/t47io_main",
  "license": "CC-BY-NC-SA-4.0",
  "author": "Siqi Tian <contact@t47.io>",
  "homepage": "https://t47.io/",
  "keywords": [
    "t47io",
    "personal",
    "portfolio"
  ],
  "devDependencies": {
    "autoprefixer": "7.1.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.1",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-module-resolver": "2.7.1",
    "babel-preset-babili": "0.1.4",
    "babel-preset-env": "1.5.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-2": "6.24.1",
    "babili-webpack-plugin": "0.1.2",
    "bootstrap-loader": "2.1.0",
    "bootstrap-sass": "3.3.7",
    "brotli-webpack-plugin": "0.3.0",
    "compression": "1.6.2",
    "compression-webpack-plugin": "0.4.0",
    "css-loader": "0.28.4",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-loader": "1.8.0",
    "eslint-plugin-import": "2.6.1",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.1.0",
    "express-static-gzip": "0.2.3",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "0.11.2",
    "html-minifier": "3.5.2",
