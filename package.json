{
  "name": "t47io_main",
  "version": "3.2.9",
  "description": "Personal website app of t47.io",
  "main": "server/server.js",
  "engines": {
    "node": "^8.9.1",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "dev": "yarn prep && yarn nodemon",
    "prod": "pm2 start --interpreter babel-node server/server.js -n main",

    "prep": "yarn json && yarn build:temp",
    "json": "babel-node ./server/json.js",
    "stat": "yarn cron && yarn build && yarn cron:chmod",
    "nodemon": "./node_modules/nodemon/bin/nodemon.js --config .nodemonrc server/server.js",

    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "./node_modules/eslint/bin/eslint.js applications build server webpack.*.js --ext [.jsx,.js] --fix",
    "lint:css": "./node_modules/stylefmt/bin/cli.js -i applications/common/mixins/sprite.scss -r \"applications/**/*.{css,scss}\"",

    "build": "yarn lint:js && yarn prep && yarn build:server && yarn build:client",
    "build:temp": "yarn webpack:temp && yarn process:temp && yarn process:error",
    "build:server": "yarn webpack:server && yarn process:server",
    "build:client": "yarn webpack:client && yarn process",
    "webpack:temp": "BABEL_ENV=production babel-node ./node_modules/webpack/bin/webpack.js --config webpack.config.temp.js",
    "webpack:server": "BABEL_ENV=production babel-node ./node_modules/webpack/bin/webpack.js --config webpack.config.server.js",
    "webpack:client": "BABEL_ENV=production babel-node ./node_modules/webpack/bin/webpack.js --config webpack.config.client.js --verbose",

    "process": "yarn process:client && yarn process:manifest && yarn process:static",
    "process:temp": "babel-node ./build/process/temp.js",
    "process:server": "babel-node ./build/process/server.jsx",
    "process:client": "babel-node ./build/process/client.js",
    "process:error": "babel-node ./build/process/error.js",
    "process:manifest": "babel-node ./build/process/manifest.js",
    "process:static": "yarn process:copy && yarn process:sitemap && yarn process:clean",
    "process:copy": "babel-node ./build/process/copy.js",
    "process:sitemap": "babel-node ./build/process/sitemap.js",
    "process:clean": "babel-node ./build/process/clean.js",

    "cron": "yarn cron:contrib && yarn cron:repo && yarn cron:scholar && yarn cron:https && yarn cron:backup && yarn cron:email",
    "cron:contrib": "babel-node ./server/cron/git_contrib.js",
    "cron:repo": "babel-node ./server/cron/git_repo.js",
    "cron:scholar": "babel-node ./server/cron/cite_scholar.js",
    "cron:https": "babel-node ./server/cron/ssl_expire.js",
    "cron:backup": "babel-node ./server/cron/backup.js",
    "cron:email": "babel-node ./server/cron/email.js",
    "cron:chmod": "babel-node ./server/cron/chmod.js",
    "cron:renew": "babel-node ./server/cron/ssl_renew.js",

    "update": "yarn upgrade-interactive --exact && yarn autoclean",
    "update:nginx": "babel-node ./server/cron/build_nginx.js"
  },
  "repository": "github:t47io/t47io_main",
  "license": "CC-BY-NC-SA-4.0",
  "author": "Siqi Tian <contact@t47.io>",
  "homepage": "https://t47.io/",
  "keywords": [
    "t47io",
    "personal",
    "portfolio"
  ],
  "devDependencies": {
    "autoprefixer": "7.2.1",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.2",
    "babel-minify-webpack-plugin": "0.2.0",
    "babel-plugin-lodash": "3.3.2",
    "babel-preset-env": "1.6.1",
    "babel-preset-minify": "0.2.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-2": "6.24.1",
    "bootstrap-loader": "2.2.0",
    "bootstrap-sass": "3.3.7",
    "brotli-webpack-plugin": "0.5.0",
    "compression": "1.7.1",
    "css-loader": "0.28.7",
    "eslint": "4.12.1",
    "eslint-config-airbnb": "15.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.5.1",
    "express-static-gzip": "0.3.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "html-minifier": "3.5.7",
    "html-webpack-plugin": "2.30.1",
    "lodash-webpack-plugin": "0.11.4",
    "node-sass": "4.7.2",
    "nodemon": "1.12.5",
    "null-loader": "0.1.1",
    "postcss": "6.0.14",
    "postcss-csso": "3.0.0",
    "postcss-loader": "2.0.9",
    "preact": "8.2.6",
    "preact-compat": "3.17.0",
    "preact-router": "2.6.0",
    "prop-types": "15.6.0",
    "purify-css": "1.2.5",
    "purifycss-webpack": "0.7.0",
    "react": "16.2.0",
