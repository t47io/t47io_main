    "react-dom": "16.2.0",
    "react-google-charts": "1.5.5",
    "react-redux": "5.0.6",
    "react-svg-loader": "2.1.0",
    "react-tooltip": "3.4.0",
    "react-waypoint": "7.3.2",
    "react-web-animation": "0.6.1",
    "reduce-reducers": "0.1.2",
    "redux": "3.7.2",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.2.0",
    "resolve-url-loader": "2.2.0",
    "sass-loader": "6.0.6",
    "serve-favicon": "2.4.5",
    "smoothscroll": "0.4.0",
    "static-site-generator-webpack-plugin": "3.4.1",
    "style-loader": "0.19.0",
    "stylefmt": "6.0.0",
    "svg-url-loader": "2.3.0",
    "url-loader": "0.6.2",
    "web-animations-js": "2.3.1",
    "webpack": "3.10.0",
    "webpack-bundle-analyzer": "2.9.1",
    "webpack-dev-middleware": "1.12.2",
    "webpack-hot-middleware": "2.21.0",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3",
    "zopfli-webpack-plugin": "0.1.0"
  },
  "dependencies": {
    "axios": "0.17.1",
    "babel-cli": "6.26.0",
    "body-parser": "1.18.2",
    "cheerio": "0.22.0",
